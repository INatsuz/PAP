doctype html

html.h-100(lang="en")
    include includes/head
    body.h-100.font-roboto
        div.fluid-container.d-flex.row.no-gutters.h-100
            aside.col-auto.h-100.bg-dark.max-width-220px.overflow-y-auto.dark-scroll.accordion#sidebarAccordion
                div.list-group.collapse.show#sidebarCollapse
                    each project in projects
                        a.list-group-item.list-group-item-action.bg-dark.text-light.project-btn.max-width-200px(data-project=project.name href=`#desc-${project.name}` data-toggle="collapse" role="button")
                            div.row.no-gutters.text-center
                                div.col-auto.d-flex.align-items-center
                                    img(src=`imgs/projects/${project.ID}.png` alt="Logo" height="30").rounded
                                div.col.px-2.d-flex.align-items-center
                                    span.w-100.text-center= project.name
                        div.bg-dark.list-group.collapse.text-center(data-id-project=`${project.ID}` data-project-code=`${project.projectCode}` data-project=`${project.name}` id=`desc-${project.name}` data-parent="#sidebarAccordion")
                            a.list-group-item.list-group-item-action.bg-dark.text-white.descriptions(href="#") Description
                            a.list-group-item.list-group-item-action.bg-dark.text-white.partners(href="#") Partners
                            a.list-group-item.list-group-item-action.bg-dark.text-white.participants(href="#") Participants
            div.col.d-flex.flex-column.position-relative
                a#sidebar-toggle.position-absolute.btn.btn-dark.z-index-2.bottom-20px.left-20px.p-2.max-width-100(href="#sidebarCollapse" data-toggle="collapse") Sidebar
                div.row.no-gutters.h-100.position-relative
                    div#general-info.p-2.bg-light.position-absolute.top-0px.left-0px.z-index-1.rounded.w-100.max-width-450px.d-none.h-max-100.overflow-y-auto
                        div.text-right.font-weight-bold
                            a#general-info-cross.badge.badge-light(href="#") x
                        header.row.no-gutters.justify-content-center
                            div.col-auto.d-flex
                                img#general-info-logo.rounded.mx-auto.align-self-center(src='imgs/mobilities/2.png' height='75' alt='Logo')
                            div.col-auto.max-width-100.d-flex
                                h4#general-info-title.p-2.align-self-center.w-100.text-center.m-0.text-left Trails2Education
                        hr
                        div#general-info-container
                    div#map.h-100.col
