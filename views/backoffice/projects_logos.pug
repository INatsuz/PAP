doctype html

html.h-100(lang="en")
    include includes/head
    body.h-100.font-roboto
        form(method="post" action="upload_project_logo" enctype="multipart/form-data")
            div.modal.fade#modal-upload(tabindex="-1" role="dialog")
                div.modal-dialog(role="document")
                    div.modal-content
                        div.modal-header
                            h5.modal-title Upload Logo For
                                span#modal_project_name [Project Name Here]
                            button.close(type="button" data-dismiss="modal")
                                span x
                        div.modal-body
                                div.form-group.mb-0
                                    div.input-group
                                        div.input-group-prepend.w-25
                                            div.input-group-text.w-100 Logo
                                        input.form-control#file-input(type="file" accept="image/*" placeholder="Project Logo" name="logo")
                        div.modal-footer
                            button.btn.btn-success.mr-auto.w-25(value="Upload" type="submit" name="submit") Upload

        div.container-fluid.m-0.p-0.h-100
            include includes/header
            if session.ID != null
                div.p-5.position-absolute.bottom-0px.top-76px.left-0px.right-0px
                    div.container.rounded.p-4.bg-light.shadow.h-max-100.d-flex.flex-column
                        h2.mb-3.text-dark
                            span.border-bottom-3px.border-top-3px.border-dark.px-2 Projects Logos
                        span
                            button.btn.btn-success.mb-2.disabled#logo-upload-btn(data-toggle="modal" data-target="#modal-upload") Upload Logo
                        div.table-responsive.rounded.dark-scroll
                            table(data-table="projects").table.table-bordered.table-hover.table-dark.table-align-middle.nowrap.m-0#table
                                thead
                                    tr.table-headers
                                        th(scope="col" data-field="ID").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px.shadow-left-dark-1px #
                                        th(scope="col" data-field="name").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px Name
                                        th(scope="col").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px.text-center
                                            i.fas.fa-images
                                tbody
                                    each project in projects
                                        tr.table-row
                                            th(scope="row").id-field= project.ID
                                            td.project-name= project.name
                                            td.text-center
                                                img(src=`../imgs/projects/${project.ID}.png` height="50")
            else
                include includes/loginErrorMessage
            footer.fixed-bottom
                span.bg-light.p-2 Made by: Vasco RaminhosÂ©

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous")
        script(src="../javascripts/project_logo_upload.js")