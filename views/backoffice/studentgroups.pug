doctype html

html.h-100(lang="en")
    include includes/head
    body.h-100.font-roboto
        div.modal.fade#modal-add(tabindex="-1" role="dialog")
            div.modal-dialog(role="document")
                div.modal-content
                    div.modal-header
                        h5.modal-title Add Student Group
                        button.close(type="button" data-dismiss="modal")
                            span x
                    div.modal-body
                        div.form-group
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Grade
                                input.form-control#add-grade(type="text" placeholder="Grade")
                        div.form-group
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Designation
                                input.form-control#add-designation(type="text" placeholder="Designation")
                        div.form-group.mb-0
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Course
                                select.form-control#add-IDCourse
                                    each course in courses
                                        option(value=course.ID)= course.course
                    div.modal-footer
                        button.btn.btn-success.mr-auto.w-25#modal-add-btn Add
        div.modal.fade#modal-edit(tabindex="-1" role="dialog")
            div.modal-dialog(role="document")
                div.modal-content
                    div.modal-header
                        h5.modal-title Edit Student Group
                        button.close(type="button" data-dismiss="modal")
                            span x
                    div.modal-body
                        div.form-group
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Grade
                                input.form-control#edit-grade(type="text" placeholder="Grade")
                        div.form-group
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Designation
                                input.form-control#edit-designation(type="text" placeholder="Designation")
                        div.form-group.mb-0
                            div.input-group
                                div.input-group-prepend.w-25
                                    div.input-group-text.w-100 Course
                                select.form-control#edit-IDCourse
                                    each course in courses
                                        option(value=course.ID)= course.course
                    div.modal-footer
                        button.btn.btn-info.mr-auto.w-25#modal-edit-btn Edit

        div.container-fluid.m-0.p-0.h-100
            include includes/header
            if session.ID != null
                div.p-5.position-absolute.bottom-0px.top-76px.left-0px.right-0px
                    div.container.rounded.p-4.bg-light.shadow.h-max-100.d-flex.flex-flow-column
                        h2.mb-3.text-dark
                            span.border-bottom-3px.border-top-3px.border-dark.px-2 Student Groups
                        include includes/add_edit_delete_btns
                        div.table-responsive.rounded.dark-scroll
                            table(data-table="studentgroups").table.table-bordered.table-hover.table-dark.nowrap.m-0#table
                                thead
                                    tr.table-headers
                                        th(scope="col" data-field="ID").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px.shadow-left-dark-1px #
                                        th(scope="col" data-field="grade").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px Grade
                                        th(scope="col" data-field="designation").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px Designation
                                        th(scope="col" data-field="IDCourse").position-sticky.top-0px.bg-darkest.shadow-top-solid-1px.shadow-bottom-dark-1px.shadow-top-dark-1px.shadow-right-dark-1px Course
                                tbody
                                    each group in studentgroups
                                        tr.table-row
                                            th(scope="row").id-field= group.ID
                                            td= group.grade
                                            td= group.designation
                                            td= group.course
            else
                include includes/loginErrorMessage
            footer.fixed-bottom
                span.bg-light.p-2 Made by: Vasco RaminhosÂ©

        include includes/scripts